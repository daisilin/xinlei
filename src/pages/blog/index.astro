---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Blog" description="Thoughts on AI, research, and building intelligent agents">
  <section class="pt-24 pb-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <header class="text-center mb-16">
        <p class="section-title">Writing</p>
        <h1 class="heading-1 text-gray-900 dark:text-white mb-6">Blog</h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          Thoughts on AI agents, reinforcement learning, and the journey of building intelligent systems.
        </p>
      </header>
      
      <!-- Posts List -->
      {posts.length > 0 ? (
        <div class="space-y-8">
          {posts.map((post) => (
            <article class="card card-hover p-6 md:p-8 group">
              <a href={`/xinlei/blog/${post.slug}/`} class="block">
                <div class="flex flex-col md:flex-row md:items-start gap-4 md:gap-6">
                  {post.data.heroImage && (
                    <div class="flex-shrink-0 w-full md:w-48 h-32 rounded-lg overflow-hidden">
                      <img 
                        src={post.data.heroImage} 
                        alt={post.data.title}
                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                      />
                    </div>
                  )}
                  <div class="flex-1 min-w-0">
                    <div class="flex items-center gap-2 mb-2">
                      <time 
                        datetime={post.data.pubDate.toISOString()}
                        class="text-sm text-gray-500 dark:text-gray-400"
                      >
                        {post.data.pubDate.toLocaleDateString('en-US', {
                          year: 'numeric',
                          month: 'long',
                          day: 'numeric',
                        })}
                      </time>
                    </div>
                    <h2 class="heading-3 text-gray-900 dark:text-white mb-3 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
                      {post.data.title}
                    </h2>
                    <p class="text-gray-600 dark:text-gray-400 line-clamp-2">
                      {post.data.description}
                    </p>
                    {post.data.tags && post.data.tags.length > 0 && (
                      <div class="flex flex-wrap gap-2 mt-4">
                        {post.data.tags.slice(0, 3).map((tag) => (
                          <span class="px-2 py-1 bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400 text-xs rounded-full">
                            {tag}
                          </span>
                        ))}
                      </div>
                    )}
                  </div>
                </div>
              </a>
            </article>
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <div class="w-16 h-16 mx-auto mb-6 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center">
            <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
            </svg>
          </div>
          <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">No posts yet</h2>
          <p class="text-gray-600 dark:text-gray-400">
            Check back soon for new articles!
          </p>
        </div>
      )}
    </div>
  </section>
</Layout>
